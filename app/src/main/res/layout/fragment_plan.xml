<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:background="@drawable/shape_gradient_main">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="План\nрасходов"
                android:textSize="34sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <RelativeLayout
                android:id="@+id/rl_plan_info"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/shape_stroke_leftbottom_rounded">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    app:tint="@color/white"
                    android:src="@drawable/ic_info_letter" />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/tl_plan_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintEnd_toEndOf="parent">
                <TableRow>
                    <android.widget.Button
                        android:id="@+id/button_plan_clear"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:textColor="@color/white"
                        android:paddingTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:drawableTop="@drawable/ic_trash"
                        android:drawableTint="@color/white"
                        android:background="@drawable/shape_rounded"
                        android:backgroundTint="@color/red_crimson" />

                    <android.widget.Button
                        android:id="@+id/button_plan_plus"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:textColor="@color/white"
                        android:paddingTop="10dp"
                        android:drawableTop="@drawable/ic_plus"
                        android:drawableTint="@color/white"
                        android:background="@drawable/shape_rounded"
                        android:backgroundTint="@color/green_main" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/tv_plan_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пусто..."
                android:textSize="35sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/tl_plan_actions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ListView
                android:id="@+id/lv_plans"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/plans_list_date_item"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="160dp"
                app:layout_constraintTop_toBottomOf="@id/tl_plan_actions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
