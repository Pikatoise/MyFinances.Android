<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="30dp"
    android:background="@drawable/shape_gradient_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_currency"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:padding="8dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_rounded"
            android:orientation="vertical"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/shape_rounded_green"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usd_title"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginEnd="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/usd_symbol"
                    android:textSize="16sp"
                    android:textColor="@color/green_dark" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_currency_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usd_to_ruble"
                android:textSize="18sp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:padding="8dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_rounded"
            android:orientation="vertical"
            android:elevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/shape_rounded_violet"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/euro_title"
                    android:textSize="14sp"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/gray_dark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/euro_symbol"
                    android:textSize="16sp"
                    android:textColor="@color/violet_dark" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_currency_euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/euro_to_ruble"
                android:textSize="18sp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_currency"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/ll_operation_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pieChart">
        <android.widget.Button
            android:id="@+id/button_plus"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="@string/main_operation_plus"
            android:textColor="@color/white"
            android:background="@drawable/shape_rounded"
            android:backgroundTint="@color/green_main"
            android:layout_marginEnd="10dp"/>

        <android.widget.Button
            android:id="@+id/button_minus"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="@string/main_operation_minus"
            android:textColor="@color/white"
            android:background="@drawable/shape_rounded"
            android:backgroundTint="@color/red_crimson"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_operations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/ll_operation_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_month_operatons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_month_operations_title"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/ll_all_operations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:background="@drawable/shape_rounded"
            android:elevation="1dp"
            android:backgroundTint="@color/blue_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_wallet"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_all_operations"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/lv_operations_month"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        tools:listitem="@layout/list_item"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        app:layout_constraintTop_toBottomOf="@id/cl_operations"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_empty_operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_empty_operations"
        android:visibility="invisible"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cl_operations"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>