<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="40dp"
    android:paddingHorizontal="20dp"
    android:background="@color/white"
    tools:context=".ui.fragments.TipsFragment">

    <ScrollView
        android:id="@+id/myView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbarSize="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Финансовая\nграмотность"
                android:fontFamily="sans-serif-medium"
                android:textSize="34sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tips_title"
                android:textSize="18sp"
                android:textColor="@color/white_smoke"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:paddingVertical="30dp"
                android:background="@drawable/shape_square_stroke"
                android:backgroundTint="@color/green_main"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_header"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tips_quote"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"/>

            <TextView
                android:id="@+id/tv_quote_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Бенджамин Франклин"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_quote"/>

            <TextView
                android:id="@+id/tv_tip_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_quote_author"/>

            <TextView
                android:id="@+id/tv_tip_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Не делайте спонтанных покупок"
                android:textSize="30sp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_1"/>

            <TextView
                android:id="@+id/tv_tip_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_1"/>

            <TextView
                android:id="@+id/tv_tip_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В первую очередь удовлетворяйте базовые потребности"
                android:textSize="30sp"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_2"/>

            <TextView
                android:id="@+id/tv_tip_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_2"/>

            <TextView
                android:id="@+id/tv_tip_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тратьте меньше, чем зарабатываете"
                android:textSize="30sp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_3"/>

            <TextView
                android:id="@+id/tv_tip_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_3"/>

            <TextView
                android:id="@+id/tv_tip_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Учитывайте не только стоймость покупки, но и ее содержание"
                android:textSize="30sp"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_4"/>

            <TextView
                android:id="@+id/tv_tip_number_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_4"/>

            <TextView
                android:id="@+id/tv_tip_text_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Создавайте финансовые резервы"
                android:textSize="30sp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_5"/>

            <TextView
                android:id="@+id/tv_tip_number_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_5"/>

            <TextView
                android:id="@+id/tv_tip_text_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отслеживайте свои траты"
                android:textSize="30sp"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_6"/>

            <TextView
                android:id="@+id/tv_tip_number_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_6"/>

            <TextView
                android:id="@+id/tv_tip_text_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Учитесь экономить"
                android:textSize="30sp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_7"/>

            <TextView
                android:id="@+id/tv_tip_number_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_7"/>

            <TextView
                android:id="@+id/tv_tip_text_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ищите источники пассивного дохода"
                android:textSize="30sp"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_8"/>

            <TextView
                android:id="@+id/tv_tip_number_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_8"/>

            <TextView
                android:id="@+id/tv_tip_text_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Диверсифицируйте риски"
                android:textSize="30sp"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_9"/>

            <TextView
                android:id="@+id/tv_tip_number_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@color/green_main_transparent"
                android:textSize="100sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_9"/>

            <TextView
                android:id="@+id/tv_tip_text_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обеспечьте безопасность своих средств"
                android:textSize="30sp"
                android:gravity="start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_number_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tip_text_10"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>