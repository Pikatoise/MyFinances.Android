<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="450dp"
    app:cardCornerRadius="25dp"
    android:backgroundTint="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp">
        <ImageView
            android:id="@+id/iv_dialog_select_type_exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_dialog_select_type_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Категория"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_dialog_select_type_exit"
            app:layout_constraintBottom_toBottomOf="@id/iv_dialog_select_type_exit"/>

        <ListView
            android:id="@+id/lv_dialog_select_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/type_item"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_select_type_header"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>